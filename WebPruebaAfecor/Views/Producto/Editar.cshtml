@model WebPruebaAfecor.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <h2>Editar Producto</h2>
    <hr />
    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="IdProducto" />
        <div class="form-group mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Marca" class="form-label">Marca</label>
            <input asp-for="Marca" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Precio" class="form-label">Precio</label>
            <input asp-for="Precio" type="number" step="0.01" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
    </form>
</div>
